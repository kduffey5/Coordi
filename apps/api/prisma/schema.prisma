// Prisma schema - this is a symlink or copy of the root schema
// In production, we'll use the root prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id              String    @id @default(uuid())
  name            String
  twilioNumber    String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  users           User[]
  agentProfile    AgentProfile?
  businessProfile BusinessProfile?
  calls           Call[]
  leads           Lead[]
  integrations    Integration?
}

model User {
  id             String       @id @default(uuid())
  email          String       @unique
  passwordHash   String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  organizationId String
  role           String       @default("owner")
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([organizationId])
}

model AgentProfile {
  id                      String       @id @default(uuid())
  organization            Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  organizationId          String       @unique
  voice                   String       @default("alloy")
  tone                    Int          @default(50)
  pace                    Int          @default(50)
  confidence              Int          @default(50)
  energy                  Int          @default(50)
  fillerLevel             Int          @default(50)
  interruptionSensitivity Int          @default(50)
  empathyLevel            Int          @default(50)
  formality               Int          @default(50)
  welcomePrompt           String       @default("")
  createdAt               DateTime     @default(now())
  updatedAt               DateTime     @updatedAt

  @@index([organizationId])
}

model BusinessProfile {
  id             String       @id @default(uuid())
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  organizationId String       @unique
  companyName    String
  description    String?
  serviceAreas   String?
  servicesOffered String?
  pricingInfo    String?
  policies       String?
  faq            String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([organizationId])
}

model Call {
  id            String       @id @default(uuid())
  organization  Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  organizationId String
  fromNumber    String
  toNumber      String
  twilioCallSid String?      @unique
  startTime     DateTime     @default(now())
  endTime       DateTime?
  durationSeconds Int?
  outcome       String?
  recordingUrl  String?
  transcript    String?
  summary       String?
  lead          Lead?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([organizationId])
  @@index([startTime])
}

model Lead {
  id              String       @id @default(uuid())
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  organizationId  String
  call            Call?        @relation(fields: [callId], references: [id])
  callId          String?      @unique
  name            String?
  phone           String?
  email           String?
  address         String?
  serviceRequested String?
  scheduledDate   DateTime?
  status          String       @default("new")
  notes           String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([organizationId])
  @@index([status])
  @@index([callId])
}

model Integration {
  id              String       @id @default(uuid())
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  organizationId  String       @unique
  calendlyLink    String?
  zapierHookUrl   String?
  emergencyNumber String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([organizationId])
}


